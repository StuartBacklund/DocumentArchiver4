<Window
    x:Class="DocumentArchiver.Views.SplashWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DocumentArchiver.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title=""
    Width="400"
    Height="300"
    Foreground="Transparent"
    Icon="/DocumentArchiver;component/Doc.ico"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid Width="400" Height="250">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Width="200"
            Height="200"
            VerticalAlignment="Center">
            <Grid.Background>
                <ImageBrush ImageSource="/DocumentArchiver;component/Images/Doc.ico" />
            </Grid.Background>
        </Grid>
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="18"
            FontStyle="Italic"
            FontWeight="Bold"
            Foreground="Black">
            ARTICLE COMPILER Version 5
        </TextBlock>
    </Grid>
</Window>